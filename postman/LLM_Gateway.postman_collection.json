              "raw": "{\n  \"model_name\": \"model-cheap\",\n  \"litellm_params\": {\n    \"model\": \"bedrock/converse/us.amazon.nova-micro-v1:0\",\n    \"aws_region_name\": \"us-east-1\"\n  }\n}"
